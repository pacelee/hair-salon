<div class="container-fluid box">


<h1> Hair Salon </h1>

<p> Add clients to any stylist:</p>

<form action="/clients" method="post">
  <label for="stylist_id"><p>Select a Stylist</p></label>
  <select id="stylist_id" name="stylist_id" type="text">
    <% @stylists.each() do |stylist| %>
      <option value="<%= stylist.id()%>"><p><%= stylist.name() %></p></option>
    <% end %>
  </select>
  <br>
  <label for="name"><p>Name of the Client:</p></label>
  <input id="name" name="name" type="text">

  <button class="btn btn-primary" type="submit">Add client</button>
</form>

</div>
